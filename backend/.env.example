# Database
# For local development with SQLite (default, no setup needed):
DATABASE_URL=sqlite:///./quickpoll.db

# For PostgreSQL (production or if you prefer):
# DATABASE_URL=postgresql://user:password@localhost:5432/quickpoll

# For Docker PostgreSQL:
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/quickpoll

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
FRONTEND_URL=http://localhost:3000

# Environment
ENVIRONMENT=development
